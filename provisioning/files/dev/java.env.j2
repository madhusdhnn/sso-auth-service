
ZOOCFGDIR={{zookeeper_conf_dir}}
ZOOCFG="$ZOOCFGDIR/zoo.cfg"
ZOO_LOG_DIR={{zookeeper_log_dir}}
USER={{zookeeper_user}}
GROUP={{zookeeper_group}}
ZOO_LOG4J_PROP="DEBUG,LOGFILE"
JVMFLAGS="{{zookeeper_jvm_flags}}"
{% if not zookeeper_jmx_disable %}
JMXDISABLE=
JMXPORT={{zookeeper_jmx_port}}
JVMFLAGS="$JVMFLAGS {{zookeeper_jmx_additional_opts}}"
{% else %}
JMXDISABLE={{zookeeper_jmx_disable}}
{% endif %}